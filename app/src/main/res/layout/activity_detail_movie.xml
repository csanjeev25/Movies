<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View"/>
        <variable name="movie" type="com.insomniac.moviesnow.Movie"/>
    </data>
    <android.support.design.widget.CoordinatorLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_bar_layout"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/collapsing_toolbar"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/colorPrimary"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    app:layout_collapseMode="parallax">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/image"
                        android:scaleType="center"
                        android:fitsSystemWindows="true"
                        posterback="@{movie.backdropPath}"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ply_overlay"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/ic_play_circle_filled_24dp"/>
                </FrameLayout>
                
                <android.support.v7.widget.Toolbar
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:id="@+id/toolbar"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <ImageView
                    android:layout_width="124dp"
                    android:layout_height="160dp"
                    android:id="@+id/movie_poster"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"
                    posterRounded="@{movie.posterPath}"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/movie_poster"
                    android:id="@+id/title"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:text="@{movie.originalTitle}"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/releaseDate"
                    android:layout_toEndOf="@id/movie_poster"
                    android:layout_below="@id/title"
                    android:textColor="@color/grey"
                    android:textSize="18sp"
                    android:text="@{movie.releaseDate}"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/movie_poster"
                    android:id="@+id/border1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_below="@id/border1"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/circle_background"
                    android:drawableBottom="@drawable/ic_star_black_24dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@{String.valueOf(movie.voteAverage)}"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:id="@+id/rating"
                    />
                <TextView
                    android:id="@+id/vote_count"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rating"
                    android:drawableEnd="@drawable/ic_group_black"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:text="@{String.valueOf(movie.voteCount)}"
                    android:textColor="@color/white"/>

                <View
                    android:id="@+id/border"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/vote_count"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/movie_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/border"
                    android:text="@{movie.overview}"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>
